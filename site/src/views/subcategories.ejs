<%- include('./partials/head.ejs') %> 
<body>
  
  <%- include('./partials/header.ejs') %>
  
  <div class="categorias">
    
    
    <div class="container">

        <h1><%= subcategoria.nombre %></h1>
      
      <div class="row">
        <!--
          Barra de navegacion de productos
        -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Productos
              </a>
              <div class="container menu-productos">
                <div class="row col-12">
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="/products/subcategory/<%- subcategoria.nombre %>"><%- subcategoria.nombre %></a>
                    </div>
                </div class="row">
              </div>
                
                
              </div>
            </li>
          </ul>
          
        </nav>
        <!--
          FIN barra de navegacion de productos
        -->
        <div class="container productos">
          
          <div class="row">
            <div class="lateral col-lg-3">
              <h3>Subcategorias</h3>
              <ul>
                    <li><a href="/products/subcategory/<%- subcategoria.nombre %>"><%- subcategoria.nombre %></a></li>
              </ul>
              <div class="filtros">
                <h3>Filtros</h3>
              </div>
            </div>
            
            <div class="container vidriera col-lg-9">

              <div class="row">


                <% subcategoria.productos.forEach(producto => { %>
                 
                <div class="col-12 col-sm-6 col-lg-4 producto">
                  <section>
                    <div class="container">
                      <div class="row">
                        <div class="col-12 col-md-12 imgproducto">
                          <img src="/images/productos/<%- producto.imagenes[0].imagen %> " alt="">
                        </div>
                        <div class="col-12 col-md-12 descripcion">
                          
                          <% if (producto.nombre.length > 30) { %>
                            <% let nameSlice = producto.nombre.slice(0,30) %> 
                             <p><%= nameSlice %>... </p>
                            <% } else { %>
                             <p><%= producto.nombre %> </p>
                          <% } %>

                          <h2>$<%= producto.precio %> </h2>

                          <% if (producto.descuento != 0) { %>
                           <span><%= producto.descuento %>% OFF</span><br>
                          <% } %>

                          <div class="botones">
                            <a href="/products/detail/<%- producto.id %> ">Detalle</a>
                            <button class="agregar" type="button">Agregar al carrito</button>
                            <a class="comprar" href="#">Comprar</a>
                          </div>
                      </div>
                    </div>
                    </div>
                  </section>
                </div>

                <% }) %>
                

                
              </div>
            </div>
          

          </div> 
        </div>
      </div>
    </div>
  </div>
  
  
  
  <%- include('partials/footer.ejs') %>
  
  <script src="/javascripts/header.js"></script>
  
  <%- include('partials/scripts.ejs') %> 