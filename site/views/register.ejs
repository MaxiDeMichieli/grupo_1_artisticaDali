<%- include('partials/head.ejs') %>

<body>

    
    <div class="registro">
        <div class="logo">
            <a href="/">
                <img src="/images/logo.png" alt="Artística Dalí">
            </a>
        </div>
        <div class="ventanas">
            <h3 id="is" class="active">INICIAR SESIÓN</h3>
            <h3 id="cc" class="">CREAR CUENTA</h3>
        </div>
        <div class="inicio-sesion" id="inicio-sesion">
            <form action="">
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email-inicio" placeholder="dalí@ejemplo.com">
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password-inicio">
                </div>
                <a href="#">¿Olvidaste tu contraseña?</a>
                <button type="submit">Ingresar</button>
            </form>
        </div>
        <div class="crear-cuenta none" id="crear-cuenta">
            <form action="">
                <div>
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" placeholder="Artística">
                </div>
                <div>
                    <label for="apellido">Apellido</label>
                    <input type="text" name="apellido" id="apellido" placeholder="Dalí">
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" placeholder="dalí@ejemplo.com">
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password">
                </div>
                <div class="terminos">
                    <input type="checkbox">Acepto los términos y condiciones.
                </div>
                <button type="submit">Crear Cuenta</button>
            </form>
        </div>
        <div class="redes">
            <hr>
            <p>O ingresa con</p>
            <div>
                <a href="#" class="google"><img src="/images/registro/google.png" alt=""><span>GOOGLE</span></a>
                <a href="#" class="facebook"><img src="/images/registro/facebook.png" alt=""><span>FACEBOOK</span></a>
            </div>
        </div>
    </div>

  
