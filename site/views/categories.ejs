<%- include('./partials/head.ejs') %> 
<body>
  
  <%- include('./partials/header.ejs') %>
  
  <div class="categorias">
    
    
    <div class="container">

      <% if (typeof search != 'undefined') { %>
        <h1>Estas buscando "<%= search %>"</h1>  
      <% } %>

      <% if (typeof subcategoryTitle != 'undefined') { %>
        <h1><%= subcategory %></h1>  
      <% } %>

      <% if (typeof banner != 'undefined') { %>
       <div class="col-12 portada"><img src="/images/portadas/<%- banner %>" alt="categoria_escolar"></div>
      <% } %>
      
      <div class="row">
        <!--
          Barra de navegacion de productos
        -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Productos
              </a>
              <div class="container menu-productos">
                <div class="row col-12">
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    
                    <% subcategory.forEach(element => { %>
                      
                        <a class="dropdown-item" href="/products/subcategory/<%- element %>"><%- element %></a>

                    <% }) %>
                    </div>
                </div class="row">
              </div>
                
                
              </div>
            </li>
          </ul>
          
        </nav>
        <!--
          FIN barra de navegacion de productos
        -->
        <div class="container productos">
          
          <div class="row">
            <div class="lateral col-lg-3">
              <h3>Categorias</h3>
              <ul>
                <% subcategory.forEach(element => { %>
                  <li><a href="/products/subcategory/<%- element %>"><%- element%> </a>
                  </li>
                <% }) %>
                
                
              </ul>
              <div class="filtros">
                <h3>Filtros</h3>
              </div>
            </div>
            
            <div class="container vidriera col-lg-9">

              <div class="row">


                <% productos.forEach(producto => { %>
                 
                <div class="col-12 col-sm-6 col-lg-4 producto">
                  <section>
                    <div class="container">
                      <div class="row">
                        <div class="col-12 col-md-12 imgproducto">
                          <img src="/images/productos/<%- producto.image[0] %> " alt="">
                        </div>
                        <div class="col-12 col-md-12 descripcion">
                          
                          <% if (producto.name.length > 30) { %>
                            <% let nameSlice = producto.name.slice(0,30) %> 
                             <p><%= nameSlice %>... </p>
                            <% } else { %>
                             <p><%= producto.name %> </p>
                          <% } %>

                          <h2>$<%= producto.price %> </h2>

                          <% if (producto.discount != 0) { %>
                           <span><%= producto.discount %>% OFF</span><br>
                          <% } %>

                          <div class="botones">
                            <a href="/products/detail/<%- producto.id %> ">Detalle</a>
                            <button class="agregar" type="button">Agregar al carrito</button>
                            <a class="comprar" href="./productCart.ejs">Comprar</a>
                          </div>
                      </div>
                    </div>
                    </div>
                  </section>
                </div>

                <% }) %>
                

                
              </div>
            </div>
          

          </div> 
        </div>
      </div>
    </div>
  </div>
  
  
  
  <%- include('partials/footer.ejs') %>
  
  <script src="/javascripts/header.js"></script>
  
  <%- include('partials/scripts.ejs') %> 