<%- include('partials/head.ejs') %> 
<body>
  
  <%- include('partials/header.ejs') %>
  
  <div class="home">
    
    <!-- CAROUSEL -->
    
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade carousel-width carousel-desktop" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner">
        
        <div class="carousel-item active">
          <img src="images/banners/banner.jpg" class="d-block w-100 banner1" alt="...">
        </div>
        <div class="carousel-item">
          <img src="images/banners/banner2.jpg" class="d-block w-100 banner2" alt="...">
        </div>
        <div class="carousel-item">
          <img src="images/banners/banner3.jpg" class="d-block w-100 banner2" alt="...">
        </div>
        <div class="carousel-item">
          <img src="images/banners/banner4.jpg" class="d-block w-100 banner2" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    
    <!-- OFERTAS -->
    
    <main>
      <div class="ofertas">
        <h1>
          ofertas destacadas
        </h1>
        <img src="" alt="">
      </div>
    </main>
  </div>
      
      <!-- PRODUCTOS SLIDER MOBILE -->
  
      <div class="productSlider">
        <div class="owl-carousel owl-theme">
        <% productos.forEach(producto => { %>
         
            <a href="/detail/<%- producto.id %> ">
                <div class="item">
                    <div class="item-container">
                        <img src="/images/productos/<%- producto.image[0] %> " alt="">
                        <% if (producto.name.length > 30) { %>
                         <% let nameSlice = producto.name.slice(0,30) %> 
                          <h4><%= nameSlice %>... </h4>
                        <% } else { %>
                        <h4><%= producto.name %> </h4>
                        <% } %> 
                        <span class="precio">$<%= producto.price %>
                          <% if (producto.discount != 0) { %>
                           <!-- <span>$1800</span> -->
                          <% } %>
                        </span>
                        <% if (producto.discount != 0) { %>
                        <div class="oferta">
                            <span><%= producto.discount %> % OFF</span>
                        </div>
                        <% } %>
                    </div>
                </div>
            </a>
        <% }) %>

        </div>
    </div>
      
      <!-- FIN DE SLIDER -->
      
      <!-- CATEGORIAS -->

  <div class="home">
    <main>
      <div class="container categoriashome">
        
        <div class="row">
          
          <div class="col-12 col-md-4">
            <section>
              <a href="category/1"><img src="/images/categorias/cat_escolar.jpg" alt="escolar"></a>
            </section>
          </div>
          
          <div class="col-12 col-md-4">
            <section>
              <a href="category/2"><img src="/images/categorias/cat_artistica.jpg" alt="artistica"></a>
            </section>
          </div>
          
          <div class="col-12 col-md-4" >
            <section> 
              <a href="category/3"><img src="/images/categorias/cat_oficina.jpg" alt="oficina"></a>
            </section>
          </div>
          
        </div>
      </div>
      
      <!-- BANNER -->
      
      <div class="banner_desktop">
        <img src="images/casa.png" alt="quedate en casa">
      </div>
      <div class="banner_movil">
        <img src="images/casa_movil.png" alt="quedate en casa">
      </div>
      
    </main>
  </div>
  
  
  
  <%- include('partials/footer.ejs') %>

<script src="/javascripts/header.js"></script>
  
  <%- include('partials/scripts.ejs') %> 